<div class="col-lg-6 col-md-6 col-12">
    <div class="course-item mb-5">
        <div class="image-blog">
            <img src="/images/blog_1.jpg" alt="" class="img-fluid">
        </div>
        <div class="course-br" style="background-image: url('/images/course-back.png');   background-repeat: no-repeat;">
            <div class="course-title">
                <h2><a href="/courses/<%= courses[i].slug %>" title=""><%= courses[i].name %></a></h2>
            </div>
            <div class="course-desc">
                <p><%= courses[i].description.substring(0,100) %>...</p>
            </div>
            <div class="course-desc">
                <h3 ><i class="fa fa-user" aria-hidden="true"> <%= courses[i].createdUser.name %></i></h3>
            </div>
            <div class="pull-right">
                 <!-- enroll or relase -->
                 <%- include('../partials/_enrollOrRelase', {course : courses[i]}) %>
            </div>
            <ul class="pb-4"></ul>
        </div>

    </div>
</div><!-- end col -->
