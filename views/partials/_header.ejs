<script> 
    const activeSystem = (className) => {
        const items = document.getElementsByClassName(className);
        for (i = 0; i < items.length; i++) 
        if(items[i].children[0].getAttribute('href') == window.location.pathname)
            items[i].classList.add("active")
        else
            items[i].classList.remove("active");
    }

    activeSystem('nav-item');
    activeSystem('right-item');
</script>